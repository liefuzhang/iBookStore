@using iBookStoreMVC.ViewModels
@model CatalogItem

@{
    ViewData["Title"] = "Book Detail";
}

@await Html.PartialAsync("_Header", new List<Header>() {
    new Header() { Controller = "CatalogManagement", Text = "<< Back to books" } })

<h4>Book Detail</h4>
<div class="books_detail">
    <div class="container">
        <form method="post" asp-controller="CatalogManagement" asp-action="Update">
            <section class="books_detail-section">
                <article class="books_detail-titles row mb-3 mt-1">
                    <section class="books_detail-title col-3">Picture</section>
                    <section class="books_detail-title col-3">Name</section>
                    <section class="books_detail-title col-3">Author</section>
                    <section class="books_detail-title col-3">Price</section>
                </article>

                <article class="books_detail-items row">
                    <section class="books_detail-item col-3 manage-book-img"><img src=@("/images/books/"+ Model.ISBN13 + ".jpg") /></section>
                    <section class="books_detail-item col-3"><input asp-for="Name" class="form-control form-input" type="text" /></section>
                    <section class="books_detail-item col-3"><input asp-for="Author" class="form-control form-input" type="text" /></section>
                    <section class="books_detail-item col-3 flex-row"><span>$</span><input asp-for="Price" type="number" class="form-control form-input  d-inline-block w-75" type="text" /></section>
                </article>

                <div class="form-group mt-3">
                    <label for="bookDescription" class="books_detail-title">Description</label>
                    <textarea asp-for="Description" class="form-control" id="bookDescription" rows="3"></textarea>
                </div>
            </section>

            <section>
                <div class="form-group row">
                    <div class="col-md-10">
                    </div>
                    <div class="col-md-2 mt-3">
                        <input type="submit" value="Update" name="action" class="btn btn-primary" />
                    </div>
                </div>
            </section>

            <input asp-for="Id" type="hidden" />
            <input asp-for="CategoryId" type="hidden" />
            <input asp-for="Description" type="hidden" />
            <input asp-for="ISBN13" type="hidden" />
        </form>
    </div>

</div>