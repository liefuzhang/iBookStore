@model iBookStoreMVC.ViewModels.CatalogItem

@{
    ViewData["Title"] = "Book Detail";
}

<div>
    <div class="h4 mb-4">Book Detail - @Model.Name</div>
    <div class="row">
        <div class="col-3 p-5">
            <form asp-controller="Cart" asp-action="AddToCart">
                <div class="book-container" title="@Model.Description">
                    <img class="book-img" src="~/images/book_placeholder.jpg" />
                    <div class="p-2">
                        <div class="book-name">@Model.Name</div>
                        <div>@Model.Author</div>
                        <div>$@Model.Price.ToString("N2")</div>
                    </div>
                </div>
                <input class="btn btn-primary @((!User.Identity.IsAuthenticated) ? "is-disabled" : "")" type="submit" value="Add to cart" />
                <input type="hidden" asp-for="@Model.Id" name="id" />
            </form>
        </div>
    </div>
</div>
