@model iBookStoreMVC.ViewModels.Order

<h4>Order Detail</h4>
<div class="orders_detail mb-4">
    <div class="container">
        <section class="orders_detail-section">
            <article class="orders_detail-titles row">
                <section class="orders_detail-title col-3">Order number</section>
                <section class="orders_detail-title col-3">Date</section>
                <section class="orders_detail-title col-3">Total</section>
                <section class="orders_detail-title col-3">Status</section>
            </article>

            <article class="orders_detail-items row">
                <section class="orders_detail-item col-3">@Model.OrderNumber</section>
                <section class="orders_detail-item col-3">@Model.CreatedDate</section>
                <section class="orders_detail-item col-3">$@Model.Total</section>
                <section class="orders_detail-item col-3">@Model.Status.ToString()</section>
            </article>
        </section>

        <section class="orders_detail-section mb-5">
            <article class="orders_detail-titles row">
                <section class="orders_detail-title col-12">Shiping address</section>
            </article>

            <article class="orders_detail-items row">
                <section class="orders_detail-item col-12">@Model.Street</section>
            </article>

            <article class="orders_detail-items row">
                <section class="orders_detail-item col-12">@Model.City</section>
            </article>

            <article class="orders_detail-items row">
                <section class="orders_detail-item col-12">@Model.Country</section>
            </article>
        </section>

        @await Html.PartialAsync("_OrderItems")
    </div>
</div>